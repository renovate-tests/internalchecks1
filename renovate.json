{
  "extends": [
    "config:base",
    "group:linters",
    "schedule:weekly",
    ":automergePatch",
    ":rebaseStalePrs",
    ":noUnscheduledUpdates",
    ":prNotPending",
    ":dependencyDashboard"
  ],
  "prHourlyLimit": 0,
  "stabilityDays": 3,
  "enabledManagers": ["npm", "nvm"],
  "node": {
    "supportPolicy": ["lts_latest"],
    "major": { "enabled": true }
  },
  "ignoreDeps": ["flow-bin", "electron"],
  "ignorePaths": ["**/node_modules/**", "**/Pods/**"],
  "packageRules": [
    {
      "groupName": "dependencies",
      "depTypeList": ["dependencies"]
    }
  ]
}
